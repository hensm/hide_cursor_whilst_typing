{
    "name": "__MSG_extension_name__"
  , "description": "__MSG_extension_description__"
  , "version": "0.0.2"
  , "author": "Matt Hensman <m@matt.tf>"

  , "default_locale": "en"
  , "manifest_version": 2

  , "applications": {
        "gecko": {
            "id": "hide_cursor_whilst_typing@matt.tf"
          , "strict_min_version": "52.0"
        }
    }

  , "background": {
        "scripts": [
            "main.js"
        ]
      , "persistent": false
    }

  , "content_scripts": [
        {
            "matches": [ "<all_urls>" ]
          , "js": [ "content.js" ]
          , "run_at": "document_start"
          , "all_frames": true
        }
    ]

  , "permissions": [
        "<all_urls>"
    ]
}
